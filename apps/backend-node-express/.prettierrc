{
  "overrides": [
    {
      "files": [".prettierrc", ".eslintrc", ".stylelintrc"],
      "options": {
        "parser": "json"
      }
    }
  ],
  "singleQuote": true,
  "printWidth": 100,
  "trailingComma": "none",
  "arrowParens": "always",
  "tabWidth": 2,
  "useTabs": false,
  "semi": true
}
